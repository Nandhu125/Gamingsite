---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "src/layouts/Layout.astro";
---

<Layout title="Reviews">
    <Header />
    <!-- Page info section -->
<section class="page-info-section set-bg" data-setbg="/images/3.jpg">
    <div class="pi-content">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-6 text-white">
                    <h2>Game reviews</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec malesuada lorem maximus mauris scelerisque, at rutrum nulla dictum.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page info section -->

<!-- Page section -->
<section class="page-section review-page spad">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="review-item">
                    <div class="review-cover set-bg" data-setbg="/images/slider-1.jpg">
                        <div class="score yellow">9.3</div>
                    </div>
                    <div class="review-text">
                        <h4>Overwatch Halloween</h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star is-fade"></i>
                        </div>
                        <p>"Experience Sudoku mastery with our addictive game! Sharpen your mind, solve puzzles, and enjoy endless fun. Download now!"</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="review-item">
                    <div class="review-cover set-bg" data-setbg="/images/slider-2.jpg">
                        <div class="score yellow">9.3</div>
                    </div>
                    <div class="review-text">
                        <h4>Grand Theft Auto</h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star is-fade"></i>
                        </div>
                        <p>
                            "Rediscover the classic Tetris fun! Drop, rotate, and clear lines for hours of addictive gameplay. Download now and enjoy!"</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="review-item">
                    <div class="review-cover set-bg" data-setbg="/images/slider-3.jpg">
                        <div class="score yellow">9.3</div>
                    </div>
                    <div class="review-text">
                        <h4>Avatar</h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star is-fade"></i>
                        </div>
                        <p>
                            "Break bricks, beat levels! Addictive fun awaits. Download now!"</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="review-item">
                    <div class="review-cover set-bg" data-setbg="/images/slider-4.jpg">
                        <div class="score yellow">9.3</div>
                    </div>
                    <div class="review-text">
                        <h4>Anthem</h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star is-fade"></i>
                        </div>
                        <p>
                            "Classic Tic Tac Toe fun! Play anytime, anywhere. Download now!"</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center pt-4">
            <button class="site-btn btn-sm">Load More</button>
        </div>
    </div>
</section>
<!-- Page section end -->
<Footer />
</Layout>