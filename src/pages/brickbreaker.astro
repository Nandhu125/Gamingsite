---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "src/layouts/Layout.astro";
---

<Layout title="BounceBall">
    <Header />
    <div onmousemove="getCoor(event)">
        
        <canvas id="canvas"   onclick="toClick()"> </canvas>
        <script is:inline src="/js/drawingTools.js"></script is:inline>
        <script is:inline src="/js/animate.js"></script is:inline>
        <script is:inline src="/js/levels.js"></script is:inline>
        <script is:inline src="/js/levelGenerator.js"></script is:inline>
        <script is:inline src="/js/sound.js"></script is:inline>
        <script is:inline src="/js/game.js"></script is:inline>
        <script is:inline src="/js/box.js"></script is:inline>
    </div>

</Layout>

<style>
    body {
background-color:#31393c;
color:#d8d78f;
-webkit-user-select: none;
-moz-user-select: none;
-ms-user-select: none;
}

#canvas {
background-color: #6d9086;
display:block;
margin:0 auto;
cursor: pointer;
}

/* for levelGenerator */
#colorPopup {
background-color: #eee;
width:100px;
position: fixed;
cursor: pointer;
left: 0;
right: 0;
border-radius: 10px;
padding: 4px;
}
.colorWrapper {
width:18px;
height:18px;
margin:1px;
float:left;
border-radius: 15px;
}
</style>