---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "src/layouts/Layout.astro";
---
<Layout title="Tetris">
    <Header />
    <div class="gamecontainer">
        <div class="container">
            <div class="line"></div>
            <div class="box bt-0 bl-0"><span class="boxtext"></span></div>
            <div class="box bt-0"><span class="boxtext"></span></div>
            <div class="box bt-0 br-0"><span class="boxtext"></span></div>
            <div class="box bl-0"><span class="boxtext"></span></div>
            <div class="box"><span class="boxtext"></span></div>
            <div class="box br-0"><span class="boxtext"></span></div>
            <div class="box bl-0 bb-0"><span class="boxtext"></span></div>
            <div class="box bb-0"><span class="boxtext"></span></div>
            <div class="box bb-0 br-0"><span class="boxtext"></span></div>
        </div>
        <div class="gameInfo">
            <h1>Welcome To My Tic Tac Toe </h1>
            <div>
                <span class="info">Turn for X</span>
                <button id="reset">Reset</button>
            </div>
            <div class="img">
                <img src="https://i.postimg.cc/xCyGBvBj/excited.gif" alt="Excited Image">
            </div>
        </div>
    </div>

    <script is:inline src="/js/tictactoe.js"></script>
</Layout>

<style>

body {
    background-image: url(https://i.postimg.cc/ZnpGGM4B/background-iamge.webp);
}

nav {
    color: white;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    font-family: 'Caprasimo', serif;
}

nav h1 {
    font-size: 30px;
    text-align: center;
    color: rgb(255, 255, 255);
    transition: 0.3s;
    transition: 0.3s;
    animation: h1 5000ms infinite;
    text-shadow: 0 0 10px rgb(255, 0, 0),
        0 0 20px rgb(255, 0, 0),
        0 0 40px rgb(255, 0, 0),
        0 0 80px rgb(230, 0, 0),
        0 0 120px rgb(255, 0, 0),
        0 0 110px rgb(255, 0, 0);
}
h1::selection{
    color: rgb(241, 0, 0);
    background-color: black;
}

/*Keyframes at which the text shadow changess*/
@keyframes h1 {
    20% {
        text-shadow: 0 0 10px rgb(47, 0, 255),
            0 0 20px rgb(47, 0, 255),
            0 0 40px rgb(47, 0, 255),
            0 0 80px rgb(47, 0, 255),
            0 0 120px rgb(47, 0, 255),
            0 0 110px rgb(47, 0, 255);
    }

    40% {
        text-shadow: 0 0 10px rgb(60, 255, 0),
            0 0 20px rgb(60, 255, 0),
            0 0 40px rgb(60, 255, 0),
            0 0 80px rgb(60, 255, 0),
            0 0 120px rgb(60, 255, 0),
            0 0 110px rgb(60, 255, 0);
    }

    60% {
        text-shadow: 0 0 10px rgb(0, 204, 255),
            0 0 20px rgb(0, 204, 255),
            0 0 40px rgb(0, 204, 255),
            0 0 80px rgb(0, 204, 255),
            0 0 120px rgb(0, 204, 255),
            0 0 110px rgb(0, 204, 255);
    }

    80% {
        text-shadow: 0 0 10px rgb(255, 251, 0),
            0 0 20px rgb(255, 251, 0),
            0 0 40px rgb(255, 251, 0),
            0 0 80px rgb(255, 251, 0),
            0 0 120px rgb(255, 251, 0),
            0 0 110px rgb(255, 251, 0);
    }

    100% {
        text-shadow: 0 0 10px rgb(255, 0, 212),
            0 0 20px rgb(255, 0, 212),
            0 0 40px rgb(255, 0, 212),
            0 0 80px rgb(255, 0, 212),
            0 0 120px rgb(255, 0, 212),
            0 0 110px rgb(255, 0, 212);
    }
}

.gamecontainer {
    display: flex;
    justify-content: space-around;
    padding: 100px 0 100px 150px;
}

.container {
    display: grid;
    grid-template-columns: repeat(3, 10vw);
    grid-template-rows: repeat(3, 10vw);
    font-family: 'Roboto', sans-serif;
    position: relative;
}

.box {
    border: 2px solid rgb(255, 255, 255);
    font-size: 7vw;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    font-family: 'Londrina Outline', cursive;
    color: #ffffff;
    letter-spacing: 12px;
    text-shadow: 0 0 5px #ff7bac,
        0 0 20px #ff7bac,
        0 0 40px #ff7bac,
        0 0 60px #ff7bac,
        0 0 80px #ff7bac,
        0 0 100px #ff7bac;
}

.box:hover {
    background-color: crimson;
    color: white;
    border-radius: 5px;
}

.gameInfo {
    padding: 0 40px;
    font-family: 'Caveat', cursive;
    ;
}

.gameInfo h1 {
    font-size: 40px;
    margin-bottom: 25px;
    color: #fee;
    text-shadow: 0 -40px 100px, 0 0 2px, 0 0 1em #329ED6, 0 0 0.5em #329ED6, 0 0 0.1em #329ED6, 0 10px 3px #000;

}

.info {
    font-size: 25px;
    line-height: 20px;
    text-shadow: 0 0 5px #ffa500, 0 0 15px #ffa500, 0 0 20px #ffa500, 0 0 40px #ffa500, 0 0 60px #ff0000, 0 0 10px #ff8d00, 0 0 98px #ff0000;
    color: #fff6a9;
    font-family: "Sacramento", cursive;
    text-align: center;
    animation: blink 12s infinite;
    -webkit-animation: blink 12s infinite;
}

#reset {
    width: 115px;
    height: 40px;
    border: none;
    outline: none;
    color: #fff;
    background: #030303;
    z-index: 0;
    cursor: pointer;
    position: relative;
    border-radius: 10px;
    margin-left: 25px;
    font-family: 'Roboto', sans-serif;
    font-weight: 600;
    font-size: 15px;
}

#reset:before {
    content: '';
    background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
    position: absolute;
    top: -2px;
    left: -2px;
    background-size: 400%;
    z-index: -1;
    filter: blur(5px);
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    animation: glowing 20s linear infinite;
    opacity: 1;
    transition: opacity .3s ease-in-out;
    border-radius: 10px;
}

#reset:active {
    color: #000
}

#reset:active:after {
    background: transparent;
}

#reset:hover:before {
    opacity: 1;
}

#reset:after {
    z-index: -1;
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: #111;
    left: 0;
    top: 0;
    border-radius: 10px;
}

@keyframes glowing {
    0% {
        background-position: 0 0;
    }

    50% {
        background-position: 400% 0;
    }

    100% {
        background-position: 0 0;
    }
}

.img img {
    width: 0;
    transition: width 1s ease-in-out;
}

.br-0 {
    border-right: 0;
}

.bl-0 {
    border-left: 0;
}

.bt-0 {
    border-top: 0;
}

.bb-0 {
    border-bottom: 0;
}

.matchdraw h1{
    font-size: 0px;
    margin-top: 20px;
    color: #ffffff;
    text-shadow: 0 0 5px #ff7bac,
        0 0 20px #ff7bac,
        0 0 40px #ff7bac,
        0 0 60px #ff7bac,
        0 0 80px #ff7bac,
        0 0 100px #ff7bac;
    transition: font-size 1s ease-in-out;
    font-family: 'Londrina Outline', cursive;
}

/* Made by CODERSUBHA */
.madeby h1 {
    font-size: 2vw;
    font-family: 'Caveat', cursive;
}
span::selection{
    color: crimson;
    background-color: black;
}
h1 span {
    display: block;
    float: left;
    animation: animate 2.25s linear infinite;
    margin: 0 5px;
    padding: 0;
    position: relative;
    color: #080808;
}

h1 span:nth-child(1) {
    animation-delay: 0s;
}

h1 span:nth-child(2) {
    animation-delay: .25s;
}

h1 span:nth-child(2) {
    animation-delay: 0.75s;
}

h1 span:nth-child(3) {
    animation-delay: 1.25s;
}

h1 span:nth-child(4) {
    animation-delay: 1.75s;
}


@keyframes animate {

    0%,
    100% {
        color: #fff;
        filter: blur(2px);
        text-shadow: 0 0 10px #889ff4,
            0 0 20px #00bbff,
            0 0 40px #00bbff,
            0 0 80px #00bbff,
            0 0 120px #00bbff,
            0 0 200px #00bbff,
            0 0 300px #00bbff,
            0 0 400px #00bbff;
    }

    5%,
    95% {
        color: #3a3e44;
        filter: blur(0px);
        text-shadow: none;
    }
}

.line {
    box-shadow: 0 0 5px #ffa500, 0 0 15px #ffa500, 0 0 20px #ffa500, 0 0 40px #ffa500, 0 0 60px #ff0000, 0 0 10px #ff8d00, 0 0 98px #ff0000;
    background-color: #fff6a9;
    height: 3px;
    width: 0vw;
    position: absolute;
    transition: width 1s ease-in-out;
}

@media screen and (max-width: 700px) {
    nav h1 {
        font-size: 7vw;
    }

    .gamecontainer {
        flex-wrap: wrap;
    }

    .gameInfo {
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .info {
        font-size: 20px;
    }

    .gameInfo h1 {
        font-size: 8vw;
    }

    .container {
        grid-template-columns: repeat(3, 20vw);
        grid-template-rows: repeat(3, 20vw);
    }

    #reset {
        margin-left: 10vw;
    }

    .madeby h1 {
        font-size: 6vw;
        position: absolute;
        bottom: 0;
        left: 70px;
        display: none;
    }
}
</style>


